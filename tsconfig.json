{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "lib": [ "es2015", "dom" ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}